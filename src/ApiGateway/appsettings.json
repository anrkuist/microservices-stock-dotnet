{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",

  "RateLimiting": {
    "Global": {
      "PermitLimit": 100,
      "WindowMinutes": 1
    },
    "Auth": {
      "PermitLimit": 10,
      "WindowMinutes": 5
    },
    "Orders": {
      "PermitLimit": 20,
      "WindowMinutes": 10
    }
  },

  "ReverseProxy": {
    "Routes": {
      "sales-route": {
        "ClusterId": "sales",
        "RateLimiterPolicy": "orders",
        "Match": {
          "Path": "/sales/{**catch-all}"
        },
        "Transforms": [
          { "PathRemovePrefix": "/sales" }
        ]
      },
      "stock-route": {
        "ClusterId": "stock",
        "Match": {
          "Path": "/stock/{**catch-all}"
        },
        "Transforms": [
          { "PathRemovePrefix": "/stock" }
        ]
      },
      "auth-route": {
        "ClusterId": "identity",
        "RateLimiterPolicy": "auth",
        "Match": {
          "Path": "/auth/{**catch-all}"
        },
        "Transforms": [
          { "PathRemovePrefix": "/auth" }
        ]
      },
      "identity-route": {
        "ClusterId": "identity",
        "RateLimiterPolicy": "auth",
        "Match": {
          "Path": "/identity/{**catch-all}"
        },
        "Transforms": [
          { "PathRemovePrefix": "/identity" }
        ]
      }
    },
    "Clusters": {
      "sales": {
        "Destinations": {
          "sales-api": {
            "Address": "http://localhost:5154/"
          }
        }
      },
      "stock": {
        "Destinations": {
          "stock-api": {
            "Address": "http://localhost:5216/"
          }
        }
      },
      "identity": {
        "Destinations": {
          "identity-api": {
            "Address": "http://localhost:5171/"
          }
        }
      }
    }
  }
}
